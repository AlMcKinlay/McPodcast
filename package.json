{
	"name": "mcpodcast",
	"version": "0.2.1",
	"main": "electron/index.js",
	"dependencies": {
		"@testing-library/jest-dom": "^5.0.0",
		"@testing-library/react": "^11.0.0",
		"@testing-library/user-event": "^12.0.0",
		"ffmpeg-static-electron": "^2.0.1",
		"fluent-ffmpeg": "^2.1.2",
		"node-id3": "^0.1.17",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"react-dropzone": "^11.0.1",
		"react-scripts": "3.4.3",
		"styled-components": "^5.1.1",
		"tailwindcss": "^1.4.6"
	},
	"scripts": {
		"dev": "concurrently 'npm:react' 'npm:electron:dev'",
		"electron:dev": "cross-env ELECTRON_START_URL=http://localhost:3000 electron . dev",
		"react": "cross-env BROWSER=none react-scripts start",
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"postinstall": "electron-builder install-app-deps"
	},
	"build": {
		"appId": "com.yamanickill.mcpodcast",
		"productName": "McPodcast",
		"mac": {
			"category": "public.app-category.utilities"
		},
		"dmg": {
			"icon": false
		},
		"linux": {
			"target": [
				"AppImage"
			],
			"category": "Utility"
		},
		"extraMetadata": {
			"main": "electron/index.js"
		},
		"files": [
			"electron/**/*"
		]
	},
	"eslintConfig": {
		"extends": "react-app"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"concurrently": "5.3.0",
		"cross-env": "7.0.2",
		"electron": "10.1.1",
		"electron-builder": "22.8.0",
		"prettier": "2.1.1",
		"tailwind.macro": "1.0.0-alpha.10"
	},
	"homepage": "./"
}
